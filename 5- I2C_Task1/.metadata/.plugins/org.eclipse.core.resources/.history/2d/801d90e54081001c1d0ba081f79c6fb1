#include "APP.h"
/*******************************************************************************
 *                              Global Variables                               *
 *******************************************************************************/
uint8_t data='A';
/*******************************************************************************
 * [Function Name]: App_init
 *
 * [Description]: 	Function to Initialize the application
 *
 *******************************************************************************/
void APP_Init(void){

	TWI_Init();
}

/*******************************************************************************
 * [Function Name]: App_Update
 *
 * [Description]: 	Function to update the state of the application
 *
 *******************************************************************************/
void APP_Update(void)
{
	TWI_SendChar(24,data);
}
