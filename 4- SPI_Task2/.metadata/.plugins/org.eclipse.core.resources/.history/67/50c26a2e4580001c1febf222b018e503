#include "APP.h"


/*GLOBAL VARIABLE
----------------------------*/
uint8_t str[20];

void App_Init(void)
{
	LCD_init();
	UART_ConfigType uart_config = {BPS_9600, NORMAL_SPEED, EIGHT_BITS, DISABLED, ONE_BIT};
	UART_init(&uart_config);
	SPI_initMaster(); /* Master Initialization */

}
void APP_Update(void)
{
	UART_receiveString(str);
	LCD_displayString(str);
	_delay_ms(100); /* delay until MC2 finish its initialization task */
	SPI_sendString(str);
	LCD_goToRowColumn(1,1);
	LCD_displayString(str);

}
