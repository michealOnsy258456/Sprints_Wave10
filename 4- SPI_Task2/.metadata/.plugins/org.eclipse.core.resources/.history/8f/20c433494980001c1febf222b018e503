#include "APP.h"


/*GLOBAL VARIABLE
----------------------------*/
uint8_t str[20];




void App_Init(void)
{
	LCD_init();
	UART_Config Config = {UART_1StopBit,UART_8Bit,UART_AsyncDouble,UART_Disable};
	UART_VidInit(&Config,9600);
	SPI_initSlave();
}
void APP_Update(void)
{
	SPI_ReceiveString(str);
	LCD_displayString(str);
	UART_sendString(str);
	UART_sendByte('\r');
	LCD_goToRowColumn(1,1);
	LCD_displayString(str);
}
